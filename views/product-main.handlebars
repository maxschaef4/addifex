                <li class="info" id="shipping">Shipping Cost: <strong>${{product.shipping.cost}}</strong></li>
                <li class="info" id="shipping">Shipping Time: <strong>{{product.shipping.time}}</strong></li>
            </div>
            <hr>
            <li class="info" id="shipping">Build Time: <strong>{{product.buildTime}}</strong></li>
        </ul>
