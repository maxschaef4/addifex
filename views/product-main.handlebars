<div class="right_aside col-3">
    {{#if favMessage}}
        {{{flashMessage favMessage "red"}}}
    {{/if}}
    <div class="rightButton_container col-12">
        <a href="/product/{{product._id}}/favorite">
            <button id="likeButton" class="red col-12" type="button">Favorite</button>
        </a>
    </div>
    <form action="/product/{{product._id}}" method="post">
        <div class="rightButton_container col-12">
            <select name="color" class="product_select col-12">
                <option value="">Colors</option>
                {{#each product.options.colors}}
                    <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="rightButton_container col-12">
            <select name="size" class="product_select col-12">
                <option value="">Sizes</option>
                {{#each product.options.sizes}}
                    <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="rightButton_container col-12">
            <select name="other" class="product_select col-12">
                <option value="">Other Options</option>
                {{#each product.options.others}}
                    <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="rightButton_container col-12">
            <input type="hidden" value="{{product._id}}" name="productId"/>
            <input type="hidden" value="{{product.name}}" name="name"/>
            <input type="hidden" value="{{product.price}}" name="price"/>
            <input type="hidden" value="{{product.shipping.cost}}" name="shippingCost"/>
            <input type="hidden" value="{{product.shipping.time}}" name="shippingTime"/>
            <input type="hidden" value="{{product.shipping.weight}}" name="weight"/>
            <input type="hidden" value="{{product.info.creatorId}}" name="creatorId"/>
            <button id="buyButton" class="green col-12" type="submit">Add to Cart</button>
        </div>
        {{#if cartMessage}}
            {{{flashMessage cartMessage "green"}}}
        {{/if}}
    </form>
    <!--Reviews will go in at a later date-->
    <!--<div class="ratings_container col-12">
        <p><a class="ratings_link">16 Reviews</a></p>
    </div>-->
    <div class="shop_container col-12">
        <p class="more_from">More from {{creator.shopName}}</p>
        <img class="creator_image" src="../images/battery.jpg"/>
        <a href="../shop/{{creator.shopName}}">
            <button class="blue col-12">Visit Shop</button>
        </a>
    </div>
    <ul class="product_info">
        <li class="info">Category: {{product.category}}</li>
        <li class="info">Keywords: {{product.keywords}}</li>
    </ul>
</div>