{{#section 'head'}}
    <link rel="stylesheet" href="../styles/product_style.css" type="text/css"/>
    <script src="../scripts/product_controller.js"></script>
    <title>{{product.name}}</title>
{{/section}}

<div class="productInfo_container col-9">
    {{#each images}}
