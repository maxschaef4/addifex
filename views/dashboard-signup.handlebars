{{#section 'head'}}
    <link rel="stylesheet" href="../styles/creatorLogin_style.css" type="text/css"/>
    <title>New Creator</title>
{{/section}}

<form id="newCreator" class="col-12" action="/dashboard/signup" method="post">
    <center><h2>Creator Information</h2></center>
    <center><p class="error">{{message}}</p></center>
    <div class="field_container col-12">
        <h4>Full Name</h4>
        <p id="fullNameError" class="error"></p>
        <input id="fullName" name="name" class="text_field col-12" type="text" size="50"/>
    </div>
    <div class="field_container col-12">
        <h4>Email</h4>
        <p id="emailError" class="error"></p>
        <input id="email" name="email" class="text_field col-12" type="text" size="50"/>
    </div>
    <div class="field_container col-12">
        <h4>Password</h4>
        <p id="passwordError" class="error"></p>
        <input id="password" name="password" class="text_field col-12" type="password" size="50"/>
    </div>
    <div class="field_container col-12">
        <h4>Confirm Password</h4>
        <p id="confirmError" class="error"></p>
        <input id="confirm" name="confirm" class="text_field col-12" type="password" size="50"/>
    </div>
    <div class="field_container col-12">
        <h4>About Creator</h4>
        <p>Tell people a little about who you are, your hobbies, and/or what you create.</p>
        <p id="descriptionError" class="error"></p>
        <textarea name="about" class="col-12"></textarea>
    </div>
    <center><h4>Continue to open up a shop</h4></center>
    <div class="button_container col-12">
        <button name="button" value="1" class="green col-12" type="submit" id="signup">Continue</button>
    </div>
    <center><h4>Skip to go to Creator Dashboard</h4></center>
    <div class="button_container col-12">
        <button name="button" value="2" class="blue col-12" type="submit" id="signup">Skip</button>
        <center><p class="note">Please note: You can open a shop at any time using the Creator Dashboard</p></center>
    </div>
</form>