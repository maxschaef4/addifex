{{#section 'head'}}
    <link rel="stylesheet" href="../styles/creatorLogin_style.css" type="text/css"/>
    <title>Open Shop</title>
{{/section}}

<form id="newShop" class="col-12" action="/dashboard/signin" method="post">
    <center><h2>Log In to My Shop</h2></center>
    <div class="field_container col-12">
        <h4>Email</h4>
        <p id="emailError" class="error"></p>
        <input id="email" name="email" class="text_field col-12" type="text" size="50"/>
    </div>
    <div class="field_container col-12">
        <h4>Password</h4>
        <p id="passwordError" class="error"></p>
        <input id="password" name="password" class="text_field col-12" type="password"/>
    </div>
    <p class="error">{{message}}</p>
    <div class="button_container col-12">
        <button class="green col-12" type="submit" id="signup">Enter Shop</button>
    </div>
</form>
<center><h3>Don't have an account?</h3></center>
<div class="button_container col-12">
    <a href="/dashboard/signup">
        <button class="blue col-12">Open Shop</button>
    </a>
</div>