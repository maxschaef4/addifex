{{#section 'head'}}
    <title>Create Account</title>
    <link rel="stylesheet" href="/styles/signup_style.css"/>
    <!--<script src="scripts/signup_controller.js"></script>-->
{{/section}}

<form id="welcome" class="welcome col-12" action="/account/edit" method="post">
    <center><h2>Update Account</h2></center>
    <div class="field_container col-12">
        <h4>Full Name</h4>
        <p id="nameError" class="error"></p>
        <input value="{{user.name}}" id="name" name="name" class="text_field col-12" type="text" size="50"/>
    </div>
    <div class="field_container col-12">
        <h4>Email</h4>
        <p id="emailError" class="error"></p>
        <input value="{{user.email}}" id="email" name="email" class="text_field col-12" type="text" size="50"/>
    </div>
    <div id="shipping" class="hidden-panel col-12">
        <center class="col-12"><h3>Shipping Info</h3></center>
        <center class="col-12"><h3 class="error">{{message.signin}}</h3></center>
        <div class="field_container col-12">
            <h4>Address Line 1</h4>
            <p id="line1Error" class="error"></p>
            <input value="{{user.shipping.line1}}" id="line1" name="line1" class="text_field col-12" type="text" size="50"/>
        </div>
        <div class="field_container col-12">
            <h4>Address Line 2</h4>
            <p id="line2Error" class="error"></p>
            <input value="{{user.shipping.line2}}" id="line2" name="line2" class="text_field col-12" type="text" size="50"/>
        </div>
        <div class="field_container col-12">
            <h4>City</h4>
            <p id="cityError" class="error"></p>
            <input value="{{user.shipping.city}}" id="city" name="city" class="text_field col-12" type="text" size="50"/>
        </div>
        <div class="field_container col-12">
            <h4>State</h4>
            <p id="stateError" class="error"></p>
