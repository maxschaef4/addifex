                <option>Wyoming</option>
            </select>
        </div>
        <div class="field_container col-12">
            <h4>Zipcode</h4>
            <p id="zipError" class="error"></p>
            <input value="{{user.shipping.zip}}" id="zip" name="zip" class="text_field col-12" type="text" size="50"/>
        </div>
        <div class="field_container col-12">
            <input type="checkbox" name="different" id="different" class="different-check col-1"/>
