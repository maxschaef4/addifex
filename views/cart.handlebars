{{#section 'head'}}
    <title>My Cart</title>
    <link rel="stylesheet" href="styles/cart_style.css"/>
{{/section}}

<div class="cartInfo_container col-12">
    <h3>My Cart</h3>
    <ul>
        <li>Total: ${{cart.total}}</li>
        <li>Items: {{cart.items}}</li>
    </ul>
</div>
{{#if message}}
    {{{flashMessage message "red"}}}
{{/if}}
{{#if cart}}
    {{#if cart.products}}
        {{#each cart.products}}
            <div class="item col-12">
                <a href="/product/{{this.product._id}}">
                    <img src="../images/battery.jpg" class="col-2"/>
                </a>
                <div class="itemInfo_container col-9">
                    <ul>
                        <li>{{this.name}}</li>
                        <li>${{this.price}}</li>
                        <li id="shipping">+ ${{this.shipping.cost}} S&H</li>
                    </ul>
                    <form>
                        <p>Quantity</p>
                        <input type="text" value="{{this.quantity}}" id="quantity"/>
                    </form>
                    <form action="/cart" method="post">
                        <button type="submit" class="red col-2">Remove</button>
                        <input type="hidden" name="productId" value="{{this.product._id}}"/>
                    </form>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="notice col-12">
            <center><h2>No products in your cart!</h2></center>
        </div>
    {{/if}}
{{else}}
    <div class="notice col-12">
        <center><h3>Error Loading Cart</h3></center>
    </div>
{{/if}}
<div class="cartInfo_container col-12">
    <div class="button_container col-12">
        <a href="/checkout">
            <button class="green col-12">Checkout</button>
        </a>
    </div>
</div>