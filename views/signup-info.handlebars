{{#section 'head'}}
    <title>Sign In</title>
    <link rel="stylesheet" href="styles/signin_style.css" type="text/css"/>
    <!--<script src="scripts/signin_controller.js"></script>-->
{{/section}}
<form id="welcome" class="welcome col-12" action="/signin" method="post">
    <center><h2>Shipping Address</h2></center>
    <center><h3 class="error">{{message.signin}}</h3></center>
    <div class="field_container col-12">
        <h4>Address Line 1</h4>
        <p id="emailError" class="error"></p>
        <input id="line1" name="line1" class="text_field col-12" type="text" size="50"/>
    </div>
    <div class="field_container col-12">
        <h4>Address Line 2</h4>
        <p id="emailError" class="error"></p>
        <input id="line2" name="line2" class="text_field col-12" type="text" size="50"/>
    </div>
    <div class="field_container col-12">
        <h4>City</h4>
        <p id="emailError" class="error"></p>
        <input id="line1" name="line1" class="text_field col-12" type="text" size="50"/>
    </div>
    <div class="field_container col-12">
        <h4>State</h4>
